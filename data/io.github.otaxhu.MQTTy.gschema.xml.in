<?xml version="1.0" encoding="utf-8"?>
<schemalist>
  <schema path="/io/github/otaxhu/MQTTy/" id="@app-id@" gettext-domain="@gettext-package@">
    <key name="window-width" type="i">
      <default>600</default>
      <summary>Window width</summary>
    </key>
    <key name="window-height" type="i">
      <default>400</default>
      <summary>Window height</summary>
    </key>
    <key name="is-maximized" type="b">
      <default>false</default>
      <summary>Window maximized state</summary>
    </key>

    <!--
      This is the human-readable type definition for this setting:

        type connection-profiles = []struct
          {
            name: String;
            url: String;
            topic: String;
            username: String;
            password: String;
            mqtt_version: String;  // "3" or "5"
            qos: String;  // "0", "1", or "2"
          }
     -->
    <key name="connections" type="a(sssssss)">
      <default>[]</default>
      <summary>List of saved connection profiles</summary>
    </key>
  </schema>
</schemalist>
